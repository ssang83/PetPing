<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyscale_g_dimd"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="40dp"
        android:background="@android:color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">
            <View
                android:layout_width="1dp"
                android:layout_height="37dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="6dp"
                android:textAlignment="center"
                android:textSize="19sp"
                android:textColor="@color/greyscale_9_111"
                android:fontFamily="@font/nanum_square_round_b"
                android:text="펫핑 앱 사용을 위해"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:textAlignment="center"
                android:textSize="19sp"
                android:textColor="@color/primary_pink"
                android:fontFamily="@font/nanum_square_round_b"
                android:text="권한을 허용해 주세요."/>
            <View
                android:layout_width="1dp"
                android:layout_height="28dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:lineSpacingExtra="8dp"
                android:textSize="12sp"
                android:textColor="@color/greyscale_9_777"
                android:fontFamily="@font/nanum_square_round_b"
                android:text="필수 권한"/>
            <View
                android:layout_width="1dp"
                android:layout_height="18dp"/>

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_group"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:lineSpacingExtra="8dp"
                        android:textSize="13sp"
                        android:textColor="@color/greyscale_9_111"
                        android:fontFamily="@font/nanum_square_round_b"
                        android:text="위치"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="8dp"
                        android:textSize="12sp"
                        android:textColor="@color/greyscale_9_777"
                        android:fontFamily="@font/nanum_square_round"
                        android:text="위치 기준 날씨 정보와\n산책 기능 제공을 위해 필요해요."/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:layout_marginHorizontal="20dp"
                android:background="@color/greyscale_3_f_0"/>

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:lineSpacingExtra="8dp"
                android:textSize="12sp"
                android:textColor="@color/greyscale_9_777"
                android:fontFamily="@font/nanum_square_round_b"
                android:text="선택 권한"/>
            <View
                android:layout_width="1dp"
                android:layout_height="18dp"/>

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="37dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1.4dp"
                    android:src="@drawable/ic_fill_1"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:lineSpacingExtra="8dp"
                        android:textSize="13sp"
                        android:textColor="@color/greyscale_9_111"
                        android:fontFamily="@font/nanum_square_round_b"
                        android:text="저장공간"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="8dp"
                        android:textSize="12sp"
                        android:textColor="@color/greyscale_9_777"
                        android:fontFamily="@font/nanum_square_round"
                        android:text="산책 중 촬영한 사진 저장을 위해\n필요해요."/>

                </LinearLayout>

            </LinearLayout>


            <Button
                android:id="@+id/btn_ok"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/primary_pink"
                android:fontFamily="@font/nanum_square_round_b"
                android:text="확인"
                android:textColor="@color/greyscale_1_fff"
                android:textSize="15sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>