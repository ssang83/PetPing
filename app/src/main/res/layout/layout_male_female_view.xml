<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/boy_btn"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginRight="4dp"
        android:layout_weight="1"
        android:background="@drawable/btn_outline_sel"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/boy_image"
            android:layout_width="31dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/ic_boy_sel" />

        <TextView
            android:id="@+id/boy_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp"
            android:fontFamily="@font/nanum_square_round"
            android:text="남"
            android:textColor="@drawable/color_sel"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/girl_btn"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginLeft="4dp"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/btn_outline_sel">

        <ImageView
            android:id="@+id/girl_image"
            android:layout_width="31dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:background="@drawable/ic_girl_sel" />

        <TextView
            android:id="@+id/girl_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp"
            android:fontFamily="@font/nanum_square_round"
            android:text="여"
            android:textColor="@drawable/color_sel"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>