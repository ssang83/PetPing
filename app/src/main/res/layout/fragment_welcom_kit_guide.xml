<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="viewModel"
            type="ai.comake.petping.ui.etc.welcome_kit.WelcomeKitGuideViewModel"/>
        <import type="android.view.View"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/greyscale_1_fff"
        >

        <include
            android:id="@+id/header"
            layout="@layout/layout_back"
            />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnApply"
            android:overScrollMode="never"
            android:scrollbars="none"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome_kit_guide_title"
                    android:textColor="@color/greyscale_9_111"
                    android:fontFamily="@font/nanum_square_round_b"
                    android:textSize="24dp"
                    android:layout_marginStart="20dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome_kit_guide_title1"
                    android:textColor="@color/primary_pink"
                    android:fontFamily="@font/nanum_square_round_b"
                    android:textSize="24dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="7dp"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_marginStart="20dp"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivCheckBox1"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_check_box_black"
                        android:adjustViewBounds="true"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/ivSubTitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="@string/welcome_kit_subtitle1"
                        app:boldText1="@{@string/welcome_kit_subtitle1}"
                        android:textColor="@color/greyscale_9_111"
                        android:textSize="14dp"
                        android:fontFamily="@font/nanum_square_round"
                        android:layout_marginStart="9dp"
                        app:layout_constraintStart_toEndOf="@+id/ivCheckBox1"
                        app:layout_constraintTop_toTopOf="@id/ivCheckBox1"
                        app:layout_constraintBottom_toBottomOf="@id/ivCheckBox1"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivCheckBox2"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_check_box_black"
                        android:adjustViewBounds="true"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/ivSubTitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="@string/welcome_kit_subtitle2"
                        app:boldText2="@{@string/welcome_kit_subtitle2}"
                        android:textColor="@color/greyscale_9_111"
                        android:textSize="14dp"
                        android:fontFamily="@font/nanum_square_round"
                        android:layout_marginStart="9dp"
                        app:layout_constraintStart_toEndOf="@+id/ivCheckBox2"
                        app:layout_constraintTop_toTopOf="@id/ivCheckBox2"
                        app:layout_constraintBottom_toBottomOf="@id/ivCheckBox2"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivCheckBox3"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_check_box_black"
                        android:adjustViewBounds="true"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/subTitle3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="@string/welcome_kit_subtitle3"
                        app:boldText3="@{@string/welcome_kit_subtitle3}"
                        android:textColor="@color/greyscale_9_111"
                        android:textSize="14dp"
                        android:fontFamily="@font/nanum_square_round"
                        android:layout_marginStart="9dp"
                        app:layout_constraintStart_toEndOf="@+id/ivCheckBox3"
                        app:layout_constraintTop_toTopOf="@id/ivCheckBox3"
                        app:layout_constraintBottom_toBottomOf="@id/ivCheckBox3"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:src="@drawable/img_welcome_kit_logo"
                    android:adjustViewBounds="true"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:orientation="vertical"
                    >

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/welcome_kit_apply_people"
                        android:textColor="@color/greyscale_9_111"
                        android:textSize="20dp"
                        android:fontFamily="@font/nanum_square_round_b"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/welcome_kit_apply_desc"
                        android:textColor="@color/greyscale_9_777"
                        android:textSize="14dp"
                        android:fontFamily="@font/nanum_square_round"
                        android:layout_marginTop="20dp"
                        android:lineSpacingExtra="5dp"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/welcome_kit_apply_method"
                        android:layout_marginTop="70dp"
                        android:textColor="@color/greyscale_9_111"
                        android:textSize="20dp"
                        android:fontFamily="@font/nanum_square_round_b"
                        />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="26dp"
                        >

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:id="@+id/ivStep1"
                            android:src="@drawable/ic_point_circle"
                            android:adjustViewBounds="true"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvStep1"
                            android:text="@string/welcome_kit_step_1"
                            android:textSize="13dp"
                            android:textColor="@color/primary_pink"
                            android:fontFamily="@font/nanum_square_round_e_b_font"
                            android:layout_marginStart="20dp"
                            app:layout_constraintStart_toEndOf="@+id/ivStep1"
                            app:layout_constraintTop_toTopOf="@+id/ivStep1"
                            app:layout_constraintBottom_toBottomOf="@+id/ivStep1"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvGuide1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/welcome_kit_guide_1"
                            android:textColor="@color/greyscale_9_111"
                            android:fontFamily="@font/nanum_square_round_b"
                            android:textSize="18dp"
                            android:layout_marginTop="10dp"
                            app:layout_constraintStart_toStartOf="@+id/tvStep1"
                            app:layout_constraintTop_toBottomOf="@+id/tvStep1"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvGuide2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/welcome_kit_guide_2"
                            android:textColor="@color/greyscale_9_666"
                            android:fontFamily="@font/nanum_square_round"
                            android:textSize="14dp"
                            android:layout_marginTop="20dp"
                            android:lineSpacingExtra="5dp"
                            app:layout_constraintStart_toStartOf="@+id/tvStep1"
                            app:layout_constraintTop_toBottomOf="@+id/tvGuide1"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvGuide3"
                            android:layout_width="0dp"
                            android:layout_height="42dp"
                            android:background="@drawable/btn_outline_ddd"
                            android:text="@string/welcome_kit_guide_1"
                            android:layout_marginTop="20dp"
                            android:textSize="14dp"
                            android:textColor="@color/greyscale_9_111"
                            android:fontFamily="@font/nanum_square_round"
                            android:gravity="center"
                            app:layout_constraintStart_toStartOf="@+id/tvStep1"
                            app:layout_constraintTop_toBottomOf="@+id/tvGuide2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:onSafeClick="@{view -> viewModel.goToMissionPet()}"
                            />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginTop="73dp"
                            android:id="@+id/ivStep2"
                            android:src="@drawable/ic_point_circle"
                            android:adjustViewBounds="true"
                            app:layout_constraintTop_toBottomOf="@+id/tvGuide3"
                            app:layout_constraintStart_toStartOf="parent"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvStep2"
                            android:text="@string/welcome_kit_step_2"
                            android:textSize="13dp"
                            android:textColor="@color/primary_pink"
                            android:fontFamily="@font/nanum_square_round_e_b_font"
                            android:layout_marginStart="20dp"
                            app:layout_constraintStart_toEndOf="@+id/ivStep2"
                            app:layout_constraintTop_toTopOf="@+id/ivStep2"
                            app:layout_constraintBottom_toBottomOf="@+id/ivStep2"
                            />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layerType="software"
                            android:background="@drawable/dash_grey_line_vertical"
                            app:layout_constraintTop_toBottomOf="@+id/ivStep1"
                            app:layout_constraintBottom_toTopOf="@+id/ivStep2"
                            app:layout_constraintStart_toStartOf="@+id/ivStep2"
                            app:layout_constraintEnd_toEndOf="@+id/ivStep2"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvGuide4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/welcome_kit_guide_3"
                            android:textColor="@color/greyscale_9_111"
                            android:fontFamily="@font/nanum_square_round_b"
                            android:textSize="18dp"
                            android:layout_marginTop="10dp"
                            app:layout_constraintStart_toStartOf="@+id/tvStep2"
                            app:layout_constraintTop_toBottomOf="@+id/tvStep2"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvGuide5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/welcome_kit_guide_4"
                            android:textColor="@color/greyscale_9_666"
                            android:fontFamily="@font/nanum_square_round"
                            android:textSize="14dp"
                            android:layout_marginTop="20dp"
                            app:layout_constraintStart_toStartOf="@+id/tvGuide4"
                            app:layout_constraintTop_toBottomOf="@+id/tvGuide4"
                            />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivGuide6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/img_welcome_kit_guide"
                            android:adjustViewBounds="true"
                            app:layout_constraintTop_toBottomOf="@+id/tvGuide5"
                            app:layout_constraintStart_toStartOf="@+id/tvGuide4"
                            app:layout_constraintEnd_toEndOf="parent"
                            />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginTop="73dp"
                            android:id="@+id/ivStep3"
                            android:src="@drawable/ic_point_circle"
                            android:adjustViewBounds="true"
                            app:layout_constraintTop_toBottomOf="@+id/ivGuide6"
                            app:layout_constraintStart_toStartOf="parent"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvStep3"
                            android:text="@string/welcome_kit_step_3"
                            android:textSize="13dp"
                            android:textColor="@color/primary_pink"
                            android:fontFamily="@font/nanum_square_round_e_b_font"
                            android:layout_marginStart="20dp"
                            app:layout_constraintStart_toEndOf="@+id/ivStep3"
                            app:layout_constraintTop_toTopOf="@+id/ivStep3"
                            app:layout_constraintBottom_toBottomOf="@+id/ivStep3"
                            />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layerType="software"
                            android:background="@drawable/dash_grey_line_vertical"
                            app:layout_constraintTop_toBottomOf="@+id/ivStep2"
                            app:layout_constraintBottom_toTopOf="@+id/ivStep3"
                            app:layout_constraintStart_toStartOf="@+id/ivStep3"
                            app:layout_constraintEnd_toEndOf="@+id/ivStep3"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvGuide6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/welcome_kit_guide_5"
                            android:textColor="@color/greyscale_9_111"
                            android:fontFamily="@font/nanum_square_round_b"
                            android:textSize="18dp"
                            android:layout_marginTop="10dp"
                            app:layout_constraintStart_toStartOf="@+id/tvStep3"
                            app:layout_constraintTop_toBottomOf="@+id/tvStep3"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvGuide7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/welcome_kit_guide_6"
                            android:textColor="@color/greyscale_9_666"
                            android:fontFamily="@font/nanum_square_round"
                            android:textSize="14dp"
                            android:layout_marginTop="15dp"
                            app:layout_constraintStart_toStartOf="@+id/tvGuide6"
                            app:layout_constraintTop_toBottomOf="@+id/tvGuide6"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="70dp"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnApply"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/welcome_kit_apply"
            android:textColor="@color/greyscale_1_fff"
            android:fontFamily="@font/nanum_square_round_b"
            android:textSize="16dp"
            android:background="@color/primary_pink"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:onSafeClick="@{view -> viewModel.goToWelcomekit()}"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>